<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg" >

    <RelativeLayout
        android:id="@+id/umcsdk_account_item_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/umcsdk_btn_height"
        android:layout_marginBottom="@dimen/umcsdk_padding_container"
        android:layout_marginTop="@dimen/umcsdk_padding_container"
        android:clickable="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="@dimen/umcsdk_btn_height"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/umcsdk_account_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/umcsdk_font_seventeen" />

            <TextView
                android:id="@+id/umcsdk_account_mobile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/umcsdk_local_mobile"
                android:textSize="@dimen/umcsdk_font_twenteen"
                android:visibility="gone" />
        </LinearLayout>

        <cm.pass.sdk.widget.LoadingImageVIew
            android:id="@+id/umcsdk_account_item_waitbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/umcsdk_dimen_ten"
            android:background="@drawable/umcsdk_load_dot_white"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>